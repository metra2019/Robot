#include <Arduino.h>
#include <SoftwareSerial.h>
#define SPEED_COM 9600
#define SPEED_WIFI 9600
SoftwareSerial wifi(2, 3); //rx, tx from esp01, 3.3 v locig!


void setup()
{
  Serial.begin(SPEED_COM);
  wifi.begin(SPEED_WIFI);
}

void loop()
{
  // если приходят данные из компьютера - отправим их в Wi-Fi модуль
  if (Serial.available()) {
    byte b = Serial.read();
    Serial.write(b);
  }
  // если приходят данные из Wi-Fi модуля - отправим их в порт
  if (wifi.available()) {
    byte b = wifi.read();
    Serial.write(b);
  }
}
